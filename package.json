{
  "name": "Web4X-social-platform",
  "description": "A multi social platform application.",
  "author": "Web4X",
  "version": "1.0.0",
  "main": "public/electron.js",
  "homepage": "./",
  "icon": "public/icons/app-icon.png",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "electron": "electron .",
    "electron-dev": "concurrently \"yarn serve\" \"wait-on http://localhost:8080 && cross-env NODE_ENV=development electron .\"",
    "electron-fast": "yarn build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "electron-pack": "electron-builder",
    "generate-icons": "electron-icon-builder --input=public/icons/app-icon.png --output=build --flatten",
    "prebuild": "yarn generate-icons",
    "preelectron-pack": "yarn build"
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@element-plus/icons-vue": "^2.1.0",
    "axios": "^1.12.2",
    "electron-icon-builder": "^2.0.1",
    "electron-session-proxy": "^1.0.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "element-plus": "^2.3.0",
    "google-translate-open-api": "^1.3.7",
    "http-proxy": "^1.18.1",
    "https-proxy-agent": "^7.0.6",
    "lodash": "^4.17.21",
    "pinia": "^3.0.3",
    "puppeteer-core": "^20.0.0",
    "socks": "^2.8.7",
    "uuid": "^9.0.1",
    "vue": "^3.3.0",
    "vue-i18n": "^9.14.5",
    "vue-router": "^4.2.0",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@vue/cli-service": "^5.0.0",
    "compression-webpack-plugin": "^11.1.0",
    "concurrently": "^8.0.0",
    "cross-env": "^10.0.0",
    "electron": "^35.5.1",
    "electron-builder": "^24.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.example.multi-social-platform",
    "productName": "Multi Social Platform",
    "directories": {
      "output": "dist_electron"
    },
    "mac": {
      "category": "public.app-category.social-networking",
      "sign": false,
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "extraResources": [
      {
        "from": "src/common/default-settings.js",
        "to": "default-settings.js"
      },
      {
        "from": "public/extensions",
        "to": "extensions"
      }
    ],
    "asarUnpack": [
      "public/extensions/**/*"
    ],
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "public/**/*"
    ]
  }
}
